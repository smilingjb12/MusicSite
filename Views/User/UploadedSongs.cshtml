@model List<MusicSite.Models.Domain.Song>

@{
    ViewBag.Title = "UploadedSongs";
    Layout = "~/Views/Shared/_Foundation.cshtml";
}

<div class="row">
	<div class="large-8 large-centered columns">
		<h2>Uploaded songs</h2>
		<hr />
        @if (Model.Any())
        {
            <table class="stats">
                <tbody>
                    @foreach (var song in Model)
                    {
                        <tr>
                            <td width="30">@(Model.IndexOf(song) + 1)</td>
                            <td width="500">@song.Artist – @Html.RouteLink(song.Title, new { controller = "Song", action = "Show", id = song.SongId })</td>
                            <td>@Html.RouteLink("Download", new { controller = "Song", action = "Download", id = song.SongId })</td>
                            <td>@Html.RouteLink("Edit", new { controller = "Song", action = "Edit", id = song.SongId })
                        </tr>
                    }
                </tbody>
            </table>
        }
        else
        {
            <div class="panel">None</div> 
        }
	</div>
</div>